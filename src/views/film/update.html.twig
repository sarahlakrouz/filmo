{% extends 'base.html.twig' %}

{% block title %}Modifier le film{% endblock %}

{% block content %}
    <h2 class="mb-4">
        <i class="fas fa-edit" aria-hidden="true"></i> Modifier le film : {{ film.title }}
    </h2>

    <form method="POST" action="/film/update?id={{ film.id }}">
        <div class="mb-3">
            <label for="title" class="form-label">Titre</label>
            <input type="text" id="title" name="title" class="form-control" value="{{ film.title }}" required>
        </div>
        <div class="mb-3">
            <label for="year" class="form-label">Année</label>
            <input type="number" id="year" name="year" class="form-control" value="{{ film.year }}" required>
        </div>
        <div class="mb-3">
            <label for="type" class="form-label">Type</label>
            <input type="text" id="type" name="type" class="form-control" value="{{ film.type }}" required>
        </div>
        <div class="mb-3">
            <label for="director" class="form-label">Réalisateur</label>
            <input type="text" id="director" name="director" class="form-control" value="{{ film.director }}" required>
        </div>
        <div class="mb-3">
            <label for="synopsis" class="form-label">Synopsis</label>
            <textarea id="synopsis" name="synopsis" class="form-control" rows="5" required>{{ film.synopsis }}</textarea>
        </div>
        <button type="submit" class="btn btn-success">Mettre à jour</button>
    </form>

    <a href="/film/list" class="btn btn-secondary mt-4">Retour à la liste</a>
{% endblock %}
