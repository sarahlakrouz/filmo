{% extends 'base.html.twig' %}

{% block title %}Créer un film{% endblock %}

{% block content %}
    <div class="container my-5">
        <h2 class="mb-4 text-primary">
            <i class="fas fa-plus me-2" aria-hidden="true"></i> Ajouter un nouveau film
        </h2>

        <form action="/film/create" method="POST" class="needs-validation" novalidate>
            <div class="row g-3">
                <div class="col-md-6">
                    <label for="title" class="form-label">Titre</label>
                    <input type="text" class="form-control" id="title" name="title" required>
                    <div class="invalid-feedback">
                        Veuillez entrer un titre.
                    </div>
                </div>

                <div class="col-md-6">
                    <label for="year" class="form-label">Année</label>
                    <input type="number" class="form-control" id="year" name="year" required>
                    <div class="invalid-feedback">
                        Veuillez entrer une année valide.
                    </div>
                </div>

                <div class="col-md-6">
                    <label for="type" class="form-label">Type</label>
                    <input type="text" class="form-control" id="type" name="type" required>
                    <div class="invalid-feedback">
                        Veuillez entrer un type.
                    </div>
                </div>

                <div class="col-md-6">
                    <label for="director" class="form-label">Réalisateur</label>
                    <input type="text" class="form-control" id="director" name="director" required>
                    <div class="invalid-feedback">
                        Veuillez entrer le nom du réalisateur.
                    </div>
                </div>
            </div>

            <div class="mb-3 mt-4">
                <label for="synopsis" class="form-label">Synopsis</label>
                <textarea class="form-control" id="synopsis" name="synopsis" rows="4" required></textarea>
                <div class="invalid-feedback">
                    Veuillez entrer un synopsis.
                </div>
            </div>

            <button type="submit" class="btn btn-primary btn-lg w-100">Ajouter le film</button>
        </form>
    </div>
{% endblock %}
